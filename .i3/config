exec_always --no-startup-id "feh --bg-scale ~/Pictures/bg.jpg"
exec xmodmap ~/.Xmodmap
exec xhost local:root
exec --no-startup-id nm-applet
exec --no-startup-id dunst
exec --no-startup-id keepassxc
